@model IEnumerable<AttributeRoutingSample.Models.Professor>

@{
    ViewBag.Title = "Professors v2 Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @for (int i = 0; i < item.Courses.Count; i++)
            {
                @Html.ActionLink(item.Courses[i].Name, "Details", "Courses", new { id = item.Courses[i].Id }, null)
            }
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
